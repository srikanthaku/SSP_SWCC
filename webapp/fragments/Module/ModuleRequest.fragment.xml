<core:FragmentDefinition xmlns:fm="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:fb="sap.ui.comp.filterbar">
	<HBox class="ssp-hbox" alignContent="SpaceBetween">
		<fm:SimpleForm layout="ColumnLayout" class="style-RemoveTitleHeight sapUiContentPadding" binding="{HeaderDetailsModel>/}" columnsM="2"
			columnsL="3" columnsXL="3" singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:toolbar>
				<Toolbar id="TB1" class="ssp-title">
					<Button icon="sap-icon://nav-back" press="handleBackPress"/>
					<Title class="ssp-form-bg" id="Title1" text="{i18n>modulesearch}"/>
					<ToolbarSpacer/>
				</Toolbar>
			</fm:toolbar>
			<Label text="{i18n>Service}" required="true"/>
			<ComboBox id="idService" width="100%" enabled="false" valueState="None">
				<items>
					<core:Item key="ZSSM" text="Plant Maintenance"/>
					<core:Item key="ZSSH" text="Human Resource"/>
					<core:Item key="ZSSI" text="Information Technology"/>
					<core:Item key="ZSSF" text="Finance"/>
					<core:Item key="ZSSS" text="Supply Chain"/>
				</items>
			</ComboBox>
			<Label text="{i18n>SelectServiceType}" required="true"/>
			<ComboBox width="100%" change="onCheckPlantVal" selectionChange="onSelectServiceTypeDD" valueState="None" placeholder="Select Service Type"
				selectedKey="{/ModuleSearch/Header/ServiceTypeKey/}" items="{/ModuleSearch/SelectServiceType/}">
				<core:Item key="{ProductGroup}" text="{MaterialGroupName}"/>
			</ComboBox>
			<Label text="{i18n>SelectSubService}" required="true"/>
			<ComboBox id="idsubservice" width="100%" valueState="None" selectionChange="onSelectSubServiceTypeDD" placeholder="Select SubService"
				selectedKey="{/ModuleSearch/Header/SUbServiceKey/}" items="{/ModuleSearch/SelectSubServiceType/}">
				<core:ListItem key="{Product}_{ProductName}" text="{ProductName}"/>
			</ComboBox>
			<Button text="Search" type="Default" press="onSearch" width="65%" class="sapUiTinyMarginBegin sapUiContentPadding swcc-pmy-btn"/>
		</fm:SimpleForm>
	</HBox>
</core:FragmentDefinition>