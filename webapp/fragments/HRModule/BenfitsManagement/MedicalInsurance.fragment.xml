<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns="sap.m" xmlns:tnt="sap.tnt"
	xmlns:fm="sap.ui.layout.form" xmlns:upload="sap.m.upload" xmlns:core="sap.ui.core">
	<VBox width="100%">
		<fm:SimpleForm layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="2" columnsXL="4" singleContainerFullSize="true"
			labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:toolbar>
				<Toolbar class="ssp-title">
					<Button icon="sap-icon://nav-back" press="handleBackPress"/>
					<Title class="ssp-form-bg" text="{i18n>createservicerequest}"/>
					<ToolbarSpacer/>
				</Toolbar>
			</fm:toolbar>
			<fm:content>
				<Toolbar>
					<Title level="H3" text="{/ServiceDescription/}" class="ssp-tlbr-title"/>
					<ToolbarSpacer/>
					<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
				</Toolbar>
				<Label text="{i18n>serviceproduct}" required="true"/>
				<ComboBox width="100%" valueState="None">
					<items>
						<core:Item key="Yes" text="Yes"/>
						<core:Item key="No" text="No"/>
					</items>
				</ComboBox>
				<Label text="{i18n>plant}" required="true"/>
				<Input id="mi-qty" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>userid}" required="false"/>
				<Input id="mi-baseunit" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>typeofemployment}" required="true"/>
				<ComboBox id="mi-priority" width="100%" valueState="None">
					<items>
						<core:Item key="Regular" text="Regular"/>
						<core:Item key="Emergency" text="Emergency"/>
						<core:Item key="Urgent" text="Urgent"/>
					</items>
				</ComboBox>
				<Label text="{i18n>mobileNumber}" required="true"/>
				<Input id="mi-mobile" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>insurancestdt}" required="true"/>
				<Input id="mi-insurance" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>dateofBirth}" required="true"/>
				<Input id="mi-dateofBirth" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>nationality}" required="true"/>
				<Input id="mi-nationality" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>middlename}" required="true"/>
				<Input id="mi-middlename" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>depedentnational}" required="true"/>
				<Input id="mi-depedentnational" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>Description}" required="true"/>
				<ComboBox id="wrkcenter" width="100%" valueState="None">
					<items>
						<core:Item key="Yes" text="Yes"/>
						<core:Item key="No" text="No"/>
					</items>
				</ComboBox>
				<Label text="{i18n>workcenter}" required="true"/>
				<ComboBox id="plant" width="100%" valueState="None">
					<items>
						<core:Item key="Regular" text="Regular"/>
						<core:Item key="Emergency" text="Emergency"/>
						<core:Item key="Urgent" text="Urgent"/>
					</items>
				</ComboBox>
				<Label text="{i18n>whenshould}" required="true"/>
				<Input id="mi-when" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>requesttype}" required="true"/>
				<Input id="mi-rqtype" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>National}" required="true"/>
				<Input id="mi-national" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>policyno}" required="true"/>
				<Input id="mi-policy" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>gender}" required="true"/>
				<Input id="mi-gender" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>FirstName}" required="true"/>
				<Input id="mi-fname" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>LastName}" required="true"/>
				<Input id="mi-lname" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox width="100%">
		<fm:SimpleForm id="ssp-create" title="" layout="ResponsiveGridLayout" class="ssp-form-txtarea" columnsM="2" columnsL="3" columnsXL="4"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Label text="{i18n>comments}" required="false"/>
				<TextArea placeholder="" rows="5" cols="20" growing="true" growingMaxLines="7" height="6rem" width="100%"/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox class="uploadBox sapUiSmallMarginBeginEnd">
		<Label text="{i18n>Attachments}" required="false"/>
		<u:FileUploader class="sapUiContentPadding" buttonOnly="true" multiple="true" icon="sap-icon://attachment" visible="true"
			sameFilenameAllowed="false" buttonText="Upload file" change="onFileAdded" filenameLengthExceed="onFileNameLengthExceed"
			fileSizeExceed="onFileSizeExceed" maximumFileSize="2" uploadComplete="onFileComplete1" typeMissmatch="handleMissmatch"
			placeholder="Choose a file" style="Emphasized"
			mimeType="application/msword,application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document"/>
	</VBox>
	<VBox>
		<Table items="{/PMCreateRequest/UploadedData}" class="upload-table" mode="Delete" noDataText="{i18n>uploadtooltip}">
			<headerToolbar >
				<Toolbar>
					<content>
						<Image src="../webapp/util/Images/uploadfile.png" height="auto" class="hide-data" width="auto">
							<layoutData>
								<FlexItemData growFactor="1"/>
							</layoutData>
						</Image>
					</content>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="File Name"/>
				</Column>
				<Column>
					<Text text="File Size"/>
				</Column>
				<Column>
					<Text text="Delete"/>
				</Column>
				<!-- Add more columns as needed -->
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{Filename}"/>
						<Text text="{Filesize}"/>
						<Text textAlign="Center" text="{Delete}"/>
						<!-- Add more cells as needed -->
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</VBox>
</core:FragmentDefinition>