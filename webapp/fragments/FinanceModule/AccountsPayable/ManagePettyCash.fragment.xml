<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:fm="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox width="100%">
		<fm:SimpleForm title="{i18n>createservicerequest}" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="4"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:toolbar>
				<Toolbar class="ssp-title">
					<Button press="handleBackPress" icon="sap-icon://nav-back"/>
					<Title class="ssp-form-bg" text="{i18n>ManagePettyCash}"/>
					<ToolbarSpacer/>
				</Toolbar>
			</fm:toolbar>
			<fm:content>
				<!--<Toolbar>-->
				<!--	<Title level="H3" text="{i18n>ManagePettyCash}" class="ssp-tlbr-title"/>-->
				<!--	<ToolbarSpacer/>-->
				<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
				<!--</Toolbar>-->
				<Label text="{i18n>CompanyCode}" required="true"/>
				<Input id="productInput" value="{/CompanyF4/0/CompanyCode}" placeholder=""/>
				<Label text="{i18n>CashJournalNUmber}" required="true"/>
				<ComboBox width="100%" valueState="None" placeholder="Select Cash Journal" selectedKey="{/ManagePettyCashData/CashJournalKey}"
					items="{/CashJournalF4/}">
					<core:Item key="{CashJournal}" text="{CashJournal}"/>
				</ComboBox>
				<Label text="{i18n>FiscalYear}" required="true"/>
				<DatePicker displayFormat="yyyy" valueFormat="yyyy" value="{/ManagePettyCashData/FiscalYear}" change="handleChange"
					class="sapUiSmallMarginBottom"/>
			</fm:content>
			<Button text="Search" type="Default" press="onSearchFinanceRequest" width="65%"
				class="sapUiTinyMarginBegin sapUiContentPadding swcc-pmy-btn"/>
		</fm:SimpleForm>
	</VBox>
	<VBox class="ssp-table-box">
		<!--<fm:SimpleForm id="ssp-create-sr-2" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="3"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>-->
		<Toolbar>
			<Title level="H3" text="{i18n>Details}" class="ssp-tlbr-title"/>
			<ToolbarSpacer/>
			<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
		</Toolbar>
		<Table sticky="ColumnHeaders,HeaderToolbar" inset="false" mode="MultiSelect" items="{path : '/ManagePettyCashData/itemData'}"
			class="ssp-request-Table sapUiContentPadding">
			<columns>
				<Column width="20em">
					<Text text="Cash Journal Number"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Posting Date"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Amount"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
					<Text text="Currency"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
					<Text text="Accounting Document Number"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
					<cells>
						<Text text="{PostingNo}"/>
						<Text text="{PostingDate}"/>
						<Text text="{NetAmount}"/>
						<Text text="{Currency}"/>
						<Text text=""/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<!--	</fm:content>
		</fm:SimpleForm>-->
	</VBox>
</core:FragmentDefinition>