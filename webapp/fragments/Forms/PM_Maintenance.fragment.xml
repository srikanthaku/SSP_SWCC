<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:fm="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox width="100%">
		<fm:SimpleForm id="ssp-create-sr" title="{i18n>createservicerequest}" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3"
			columnsXL="4" singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Toolbar>
					<Title level="H3" text="{i18n>turbineplanned}" class="ssp-tlbr-title"/>
					<ToolbarSpacer/>
					<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
				</Toolbar>
				<Label text="{i18n>serviceproduct}" required="true"/>
				<ComboBox id="pm-serviceproduct" width="100%" valueState="None">
					<items>
						<core:Item key="Yes" text="Yes"/>
						<core:Item key="No" text="No"/>
					</items>
				</ComboBox>
				<Label text="{i18n>quantity}" required="true"/>
				<Input id="qty" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>baseunit}" required="false"/>
				<ComboBox id="Tender" width="100%" valueState="None">
					<items>
						<core:Item key="Yes" text="Yes"/>
						<core:Item key="No" text="No"/>
					</items>
				</ComboBox>
				<Label text="{i18n>priority}" required="true"/>
				<ComboBox id="priority" width="100%" valueState="None">
					<items>
						<core:Item key="Regular" text="Regular"/>
						<core:Item key="Emergency" text="Emergency"/>
						<core:Item key="Urgent" text="Urgent"/>
					</items>
				</ComboBox>
				<Label text="{i18n>workcenter}" required="true"/>
				<ComboBox id="wrkcenter" width="100%" valueState="None">
					<items>
						<core:Item key="Yes" text="Yes"/>
						<core:Item key="No" text="No"/>
					</items>
				</ComboBox>
				<Label text="{i18n>plant}" required="true"/>
				<ComboBox id="plant" width="100%" valueState="None">
					<items>
						<core:Item key="Regular" text="Regular"/>
						<core:Item key="Emergency" text="Emergency"/>
						<core:Item key="Urgent" text="Urgent"/>
					</items>
				</ComboBox>
				<Label text="{i18n>equipment}" required="true"/>
				<Input id="productInput6" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>maintenanceorder}" required="true"/>
				<Input id="productInput7" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox width="100%">
		<UploadCollection id="UploadCollection" fileType="docx" maximumFilenameLength="55" maximumFileSize="10" multiple="true"
			sameFilenameAllowed="true" instantUpload="false" noDataDescription="Quotation Upload" change="onChange" fileDeleted="onFileDeleted"
			filenameLengthExceed="onFilenameLengthExceed" fileSizeExceed="onFileSizeExceed" typeMissmatch="onTypeMissmatch"
			uploadComplete="onUploadComplete" beforeUploadStarts="onBeforeUploadStarts" class="btn-upload"/>
		<Button id="upload" text="Upload Now" press="onStartUpload"/>
	</VBox>
</core:FragmentDefinition>