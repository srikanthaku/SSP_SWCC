			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>-->
		<Toolbar>
			<Title level="H3" text="{i18n>Details}" class="ssp-tlbr-title"/>
			<ToolbarSpacer/>
			<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
		</Toolbar>
		<Table   sticky="ColumnHeaders,HeaderToolbar" inset="false" class="ssp-request-Table sapUiContentPadding">
			<columns>
				<Column width="20em">
					<Text text="Policy Number"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Plant"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Vendor"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
					<Text text="Policy Type"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
					<Text text="Policy Status"/>
