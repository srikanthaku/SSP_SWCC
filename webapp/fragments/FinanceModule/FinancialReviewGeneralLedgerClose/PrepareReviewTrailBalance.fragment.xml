<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:fm="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox width="100%">
		<fm:SimpleForm layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="4" singleContainerFullSize="true"
			labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:toolbar>
				<Toolbar class="ssp-title">
					<Button press=".handleBackPress" icon="sap-icon://nav-back"/>
					<Title class="ssp-form-bg" text="{i18n>createservicerequest}"/>
					<ToolbarSpacer/>
				</Toolbar>
			</fm:toolbar>
			<fm:content>
				<Toolbar>
					<Title level="H3" text="{/ServiceDescription/}" class="ssp-tlbr-title"/>
					<ToolbarSpacer/>
				</Toolbar>
				<Label text="{i18n>serviceproduct}"/>
				<Input value="{/PMCreateRequest/Header/Material/}" showSuggestion="" enabled="false" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>quantity}" required="true"/>
				<Input placeholder="Enter Quantity" value="{/PMCreateRequest/Header/MaterialQty/}"/>
				<Label text="{i18n>shortdescription}" required="true"/>
				<Input placeholder="Allowed 40 Charcters" showSuggestion="" showValueHelp="" value="{/PMCreateRequest/Header/Descript/}" valueHelpRequest=""/>
				<!--	<Label text="{i18n>workcenter}" required="true"/>
				<ComboBox width="100%" valueState="None" placeholder="Select Work Center" selectedKey="{/PMCreateRequest/Header/PmWkctr/}"
					items="{/PMCreateRequest/WorkCenterF4/}">
					<core:Item key="{Workcenter}" text="{Workcenter} - {WorkcenterDesc}"/>
				</ComboBox>-->
				<Label text="{i18n>CompanyCode}" required="true"/>
				<ComboBox width="100%" change="" selectionChange="" valueState="None" placeholder="Company Code" selectedKey="{fiModel>CompanyCode}"
					items="{fiModel>/companyCode}">
					<core:Item key="{fiModel>CompanyCode}" text="{fiModel>CompanyCode} - {fiModel>CompanyCodeName}"/>
				</ComboBox>
				<Label text="{i18n>Description}" required="false"/>
				<Input placeholder="Enter Description" value="{/ServiceDescription/}" enabled="false"/>
				<Label text="{i18n>ChartofAccount}" required="true"/>
				<ComboBox width="100%" change="" selectionChange="" valueState="None" placeholder="Select Plant" selectedKey="{fiModel>GLAccount}"
					items="{fiModel>/GLAccount}">
					<core:Item key="{fiModel>GLAccount}" text="{fiModel>ChartOfAccounts}"/>
				</ComboBox>
				<Label text="{i18n>GLAccount}" required="true"/>
				<ComboBox width="100%" change="" selectionChange="" valueState="None" placeholder="Select Plant" selectedKey="{fiModel>GLAccount}"
					items="{fiModel>/GLAccount}">
					<core:Item key="{fiModel>GLAccount}" text="{fiModel>GLAccount} - {fiModel>GLAccountName}"/>
				</ComboBox>
				<Label text="{i18n>FiscalYear}" required="true"/>
				<DatePicker displayFormat="yyyy" value="{ 'path': '/valueDP11', 'type': 'sap.ui.model.type.Date', 'formatOptions': { 'pattern': 'yyyy' } }"
					change="handleChange" class="sapUiSmallMarginBottom"/>
				<Label text="{i18n>plant}" required="true"/>
				<ComboBox width="100%" change="" selectionChange="" valueState="None" placeholder="Select Plant" selectedKey="{fiModel>Plant}"
					items="{fiModel>/plant}">
					<core:Item key="{fiModel>Plant}" text="{fiModel>Plant} - {fiModel>PlantName}"/>
				</ComboBox>
				<Label text="{i18n>CurrencyType}" required="true"/>
				<ComboBox width="100%" change="" selectionChange="" valueState="None" placeholder="Select Currency Type"
					selectedKey="{fiModel>CurrencyRole}" items="{fiModel>/CurrencyRole}">
					<core:Item key="{fiModel>CurrencyRole}" text="{fiModel>CurrencyRole} - {fiModel>CurrencyRole_Text}"/>
				</ComboBox>
				<Label text="{i18n>Ledger}" required="true"/>
				<ComboBox width="100%" change="" selectionChange="" valueState="None" placeholder="Select Ledger Type" selectedKey="{fiModel>Ledger}"
					items="{fiModel>/Ledger}">
					<core:Item key="{fiModel>Ledger}" text="{fiModel>Ledger} - {fiModel>Ledger_Text}"/>
				</ComboBox>
				<Label text="{i18n>ReportingPeriod}" required="true"/>
				<DateRangeSelection class="DRS1"
					value="{ 'type': 'sap.ui.model.type.DateInterval', 'formatOptions': { 'pattern': 'yyyy/MM/dd' }, 'parts': [ { 'type': 'sap.ui.model.type.Date', 'path': '/start' }, { 'type': 'sap.ui.model.type.Date', 'path': '/end' } ] }"
					change="handleChange"/>
			</fm:content>
			<Button text="Search" type="Default" press="onSearchMngePttyCash" width="65%" class="sapUiTinyMarginBegin sapUiContentPadding swcc-pmy-btn"/>
		</fm:SimpleForm>
	</VBox>
	<VBox width="100%">
		<fm:SimpleForm title="" layout="ResponsiveGridLayout" class="ssp-form-txtarea" columnsM="2" columnsL="3" columnsXL="4"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Label text="{i18n>Remarks}" required="false"/>
				<TextArea placeholder="" rows="5" cols="20" text="{/PMCreateRequest/Header/NotifText/}" growing="true" growingMaxLines="7" height="6rem"
					width="100%"/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
</core:FragmentDefinition>