<core:FragmentDefinition xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:fm="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Table sticky="ColumnHeaders,HeaderToolbar" inset="false" mode="None" items="{path : '/ClosedItemRequestData/itemData'}"
		class="ssp-request-Table">
		<headerToolbar>
			<OverflowToolbar>
				<Title text="Requests" level="H2"/>
				<ToolbarSpacer/>
				<OverflowToolbar>
					<ToolbarSpacer/>
				</OverflowToolbar>
				<!--<Button tooltip="Sort" icon="sap-icon://sort" press="handleSortButtonPressed"/>-->
				<!--<Button tooltip="Filter" icon="sap-icon://filter" press="handleFilterButtonPressed"/>-->
				<!--<Button tooltip="Group" icon="sap-icon://group-2" press="handleGroupButtonPressed"/>-->
				<!--<ToggleButton icon="sap-icon://menu" tooltip="Enable Custom Context Menu" press="onToggleContextMenu"/>-->
			</OverflowToolbar>
		</headerToolbar>
		<infoToolbar>
			<OverflowToolbar visible="false">
				<Text/>
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column width="12em">
				<Text text="User ID"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="First Name"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Last Name"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Email"/>
			</Column>
			<Column width="18rem" minScreenWidth="Tablet" demandPopin="true">
				<Text text="Roles"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text=""/>
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<ObjectIdentifier text="{RequestID}"/>
					<Text text="{FirstName}"/>
					<Text text="{LastName}"/>
					<Text text="{Email}"/>
					<HBox>
						<!--<Text class="sapUiTinyMarginBegin" text="{Chk_HR}"/>-->
						<!--<Text class="sapUiTinyMarginBegin" text="{Chk_FI}"/>-->
						<!--<Text class="sapUiTinyMarginBegin" text="{Chk_IT}"/>-->
						<!--<Text class="sapUiTinyMarginBegin" text="{Chk_TECH}"/>-->
						<!--<Text class="sapUiTinyMarginBegin" text="{Chk_SCM}"/>-->
						<!--...............................................................................-->
						<CheckBox selected="{AccessHR}" enabled="{editFlag}" text="HR"/>
						<CheckBox selected="{AccessFI}" enabled="{editFlag}" text="FI"/>
						<CheckBox selected="{AccessIT}" enabled="{editFlag}" text="IT"/>
						<CheckBox selected="{AccessPM}" enabled="{editFlag}" text="TECH"/>
						<CheckBox selected="{AccessSC}" enabled="{editFlag}" text="SCM"/>
					</HBox>
					<HBox>
						<Button icon="sap-icon://edit" text="Edit Role" class="swcc-pmy-btn" type="Accept" press="onEditUSer"/>
						<Button icon="sap-icon://save" text="Save" class="swcc-pmy-btn sapUiTinyMarginBegin" type="Emphasized" press="onSaveUser"/>
					</HBox>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>