<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:fm="sap.ui.layout.form"
	xmlns:upload="sap.m.upload" xmlns:core="sap.ui.core">
	<VBox width="100%">
		<fm:SimpleForm title="{i18n>ITServiceRequest}" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="4"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Toolbar>
					<Title level="H3" text="{i18n>ITProcurementService}" class="ssp-tlbr-title"/>
					<ToolbarSpacer/>
					<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
				</Toolbar>
				<Label text="{i18n>serviceproduct}" required="true"/>
				<Text text="Product"/>
				<Label text="{i18n>Plant}" required="true"/>
				<Input placeholder="" showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest"
					suggestionItems="{/ProductCollection}">
					<suggestionItems>
						<core:Item text="{Name}"/>
					</suggestionItems>
				</Input>
				<Label text="{i18n>WorkCenter}" required="false"/>
				<Input placeholder="" showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest"
					suggestionItems="{/ProductCollection}">
					<suggestionItems>
						<core:Item text="{Name}"/>
					</suggestionItems>
				</Input>
				<Label text="{i18n>TotalEstimatedValue}" required="true"/>
				<Input placeholder="" showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest"
					suggestionItems="{/ProductCollection}">
					<suggestionItems>
						<core:Item text="{Name}"/>
					</suggestionItems>
				</Input>
				<Label text="{i18n>Description}" required="true"/>
				<Text text="Product"/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox class="ssp-table-box">
		<!--<fm:SimpleForm id="ssp-create-sr-2" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="3"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>-->
		<Toolbar>
			<Title level="H3" text="{i18n>Details}" class="ssp-tlbr-title"/>
			<ToolbarSpacer/>
			<Button icon="sap-icon://add" press=".onAddItemsPress"/>
		</Toolbar>
		<ScrollContainer horizontal="true" vertical="false" height="auto">
			<Table id="totalamount" mode="None" items="{path : '/MarineTransportation/itemData'}" sticky="ColumnHeaders,HeaderToolbar"
				class="ssp-request-Table sapUiContentPadding" inset="false" growingThreshold="5" growingScrollToLoad="true" growing="true"
				fixedLayout="true">
				<columns>
					<Column>
						<Text text="Material"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Quantity"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="UOM"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Plant"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Purchasing Group"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Requisitioner"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Unit Price"/>
					</Column>
					<Column width="5%"></Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<Input placeholder="" showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest"
								suggestionItems="{/ProductCollection}">
								<suggestionItems>
									<core:Item text="{Name}"/>
								</suggestionItems>
							</Input>
							<Input placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
							<Text text="Will shi"/>
							<Input placeholder="" showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest"
								suggestionItems="{/ProductCollection}">
								<suggestionItems>
									<core:Item text="{Name}"/>
								</suggestionItems>
							</Input>
							<Input placeholder="" showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest"
								suggestionItems="{/ProductCollection}">
								<suggestionItems>
									<core:Item text="{Name}"/>
								</suggestionItems>
							</Input>
							<Input value="SAR"/>
							<Input id="srproduct3" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
							<Button icon="sap-icon://delete" press="onDeleteItemPress" type="Transparent"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</ScrollContainer>
		<!--	</fm:content>
		</fm:SimpleForm>-->
	</VBox>
</core:FragmentDefinition>