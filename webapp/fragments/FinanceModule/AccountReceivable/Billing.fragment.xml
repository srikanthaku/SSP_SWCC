<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:fm="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox width="100%">
		<fm:SimpleForm title="{i18n>createservicerequest}" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="4"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:toolbar>
				<Toolbar class="ssp-title">
					<Button press=".handleBackPress" icon="sap-icon://nav-back"/>
					<Title class="ssp-form-bg" text="{i18n>Billing}"/>
					<ToolbarSpacer/>
				</Toolbar>
			</fm:toolbar>
			<fm:content>
				<Toolbar>
					<Title level="H3" text="{/ServiceDescription/}" class="ssp-tlbr-title"/>
					<ToolbarSpacer/>
				</Toolbar>
				<Label text="{i18n>serviceproduct}"/>
				<Input value="{/FinanceAppVisible/}" showSuggestion="" enabled="false" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>quantity}" required="true"/>
				<Input enabled="false" placeholder="Enter Quantity" value="{/AccountsReceivable/Billing/Header/quantity/}"/>
				<Label text="{i18n>CustomerCode}" required="true"/>
				<Input ariaLabelledBy="-ZSSP_FI_SRV-/F_Mmim_Customer_Vh-com.swcc.Template.fragments.FinanceModule.customercodeF4-/customercodeF4/"
					width="100%" placeholder="Enter customer code" valueHelpOnly="false" showValueHelp="true" valueHelpRequest="onValueHelpRequest"
					value="{/customercodeF4/}">
					<customData>
						<core:CustomData key="Customer" value="Customer"/>
						<core:CustomData key="CustomerName" value="Customer Name"/>
					</customData>
				</Input>
				<core:Title text=""/>
				<Label text="{i18n>Description}" required="false"/>
				<Input placeholder="Enter Description" value="{/ServiceDescription/}" enabled="false"/>
				<Label text="{i18n>shortdescription}" required="true"/>
				<Input placeholder="Allowed 40 Charcters" showSuggestion="" showValueHelp="" value="{/PMCreateRequest/Header/Descript/}" valueHelpRequest=""/>
				<Label text="{i18n>CompanyCode}" required="true"/>
				<Input ariaLabelledBy="-ZSSP_COMMON_SRV-/C_CompanyCodeVHTemp-com.swcc.Template.fragments.CommonF4.CompanycodeF4-/CompanycodeF4/"
					width="100%" placeholder="Enter Company code" valueHelpOnly="false" showValueHelp="true" valueHelpRequest="onValueHelpRequest"
					value="{/CompanycodeF4/}">
					<customData>
						<core:CustomData key="CompanyCode" value="Company Code"/>
						<core:CustomData key="CompanyCodeName" value="Company Name"/>
					</customData>
				</Input>
				<core:Title text=""/>
				<Label text="{i18n>plant}" required="true"/>
				<Input ariaLabelledBy="-ZSSP_COMMON_SRV-/A_Plant-com.swcc.Template.fragments.CommonF4.PlantF4-/PlantF4/" width="100%"
					placeholder="Enter Plant" valueHelpOnly="false" showValueHelp="true" valueHelpRequest="onValueHelpRequest" value="{/PlantF4/}">
					<customData>
						<core:CustomData key="Plant" value="Plant"/>
						<core:CustomData key="PlantName" value="Plant Name"/>
					</customData>
				</Input>
				<Label text="{i18n>KeyDate}" required="true"/>
				<DatePicker valueFormat="dd/MM/yyyy" value="" change="handleManagePettyCashDateChange" class="sapUiSmallMarginBottom"/>
			</fm:content>
			<Button text="Search" type="Default" press="onSearchFinanceRequest" width="40%"
				class="sapUiTinyMarginBegin sapUiContentPadding swcc-pmy-btn"/>
		</fm:SimpleForm>
	</VBox>
	<VBox width="100%">
		<fm:SimpleForm title="" layout="ResponsiveGridLayout" class="ssp-form-txtarea" columnsM="2" columnsL="3" columnsXL="4"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Label text="{i18n>Remarks}" required="false"/>
				<TextArea placeholder="" rows="5" cols="20" text="{/PMCreateRequest/Header/NotifText/}" growing="true" growingMaxLines="7" height="6rem"
					width="100%"/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox class="ssp-table-box">
		<!--<fm:SimpleForm id="ssp-create-sr-2" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="3"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>-->
		<Toolbar>
			<Title level="H3" text="{i18n>Details}" class="ssp-tlbr-title"/>
			<ToolbarSpacer/>
			<!--<Button icon="sap-icon://add" press=".onAddItemsPress"/>-->
		</Toolbar>
		<ScrollContainer horizontal="true" vertical="false" height="auto">
			<Table mode="MultiSelect" selectionChange="onTableSelectionChange" items="{path : '/AccountsReceivable/Billing/itemData'}"
				sticky="ColumnHeaders,HeaderToolbar" class="ssp-request-Table sapUiContentPadding" inset="false" growingThreshold="5"
				growingScrollToLoad="true" growing="true" fixedLayout="true">
				<columns>
					<Column>
						<Text text="Invoice Number"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Posting Date"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Reference"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Sales Order Number"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Item Number"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Amount"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Currency"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Customer Code"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Material Code"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Quantity"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<Text text="{InvoiceNo}"/>
							<Text text="{path:'PostingDate', type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'dd MMMM, yyyy' } }"/>
							<Text text="{Reference}"/>
							<Text text="{SalesOrderNo}"/>
							<Text text="{ItemNo}"/>
							<Text text="{Amount}"/>
							<Text text="{Currency}"/>
							<Text text="{Customer}"/>
							<Text text="{MaterialCode}"/>
							<Text text="{Quintity}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</ScrollContainer>
		<!--	</fm:content>
		</fm:SimpleForm>-->
	</VBox>
</core:FragmentDefinition>