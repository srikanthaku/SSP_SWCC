<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:fm="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox width="100%">
		<fm:SimpleForm id="ssp-create-sr" title="{i18n>createservicerequest}" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="2"
			columnsXL="4" singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Toolbar>
					<Title level="H3" text="{i18n>Materialandspare}" class="ssp-tlbr-title"/>
					<ToolbarSpacer/>
					<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
				</Toolbar>
				<Label text="{i18n>Requisitioner}" required="true"/>
				<Input id="productInput" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>Justification}" required="true"/>
				<Input id="productInput3" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>TenderPreQualification}" required="false"/>
				<ComboBox id="Tender" width="100%" valueState="None">
					<items>
						<core:Item key="Yes" text="Yes"/>
						<core:Item key="No" text="No"/>
					</items>
				</ComboBox>
				<Label text="{i18n>ServiceLevel}" required="true"/>
				<ComboBox id="service-level" width="100%" valueState="None">
					<items>
						<core:Item key="Regular" text="Regular"/>
						<core:Item key="Emergency" text="Emergency"/>
						<core:Item key="Urgent" text="Urgent"/>
					</items>
				</ComboBox>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox class="ssp-table-box">
		<!--<fm:SimpleForm id="ssp-create-sr-2" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="3"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>-->
		<Toolbar>
			<Title level="H3" text="{i18n>Details}" class="ssp-tlbr-title"/>
			<ToolbarSpacer/>
			<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
		</Toolbar>
		<Table id="totalamount" sticky="ColumnHeaders,HeaderToolbar" inset="false" class="ssp-request-Table sapUiContentPadding">
			<columns>
				<Column>
					<Text text="Sno"/>
				</Column>
				<Column width="20em">
					<Text text="Material Code"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Description"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Unit of Measure"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
					<Text text="Quantity"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
					<Text text="Estimated Price"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
					<cells>
						<Text text="1"/>
						<Text text="Titanium"/>
						<Text text="Will shi"/>
						<Text text="SOM"/>
						<Text text="2"/>
						<Text text="699.00SAR"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<!--	</fm:content>
		</fm:SimpleForm>-->
	</VBox>
</core:FragmentDefinition>