<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:fm="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox width="100%">
		<fm:SimpleForm title="{i18n>createservicerequest}" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="4"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:toolbar>
				<Toolbar class="ssp-title">
					<Button press="handleBackPress" icon="sap-icon://nav-back"/>
					<Title class="ssp-form-bg" text="{i18n>ManagePettyCash}"/>
					<ToolbarSpacer/>
				</Toolbar>
			</fm:toolbar>
			<fm:content>
				<!--<Toolbar>-->
				<!--	<Title level="H3" text="{i18n>ManagePettyCash}" class="ssp-tlbr-title"/>-->
				<!--	<ToolbarSpacer/>-->
				<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
				<!--</Toolbar>-->
				<Label text="{i18n>serviceproduct}"/>
				<Input value="{/FinanceAppVisible/}" showSuggestion="" enabled="false" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>quantity}" required="true"/>
				<Input placeholder="Enter Quantity" value="{/AccountPayable/ManagePettyCash/Header/quantity/}"/>
				<Label text="{i18n>plant}" required="true"/>
				<ComboBox width="100%" change="onCheckPlantVal" selectionChange="onSelectPlant" valueState="None" placeholder="Select Plant"
					selectedKey="{/AccountPayable/ManagePettyCash/Header/Plant/}" items="{/PlantF4/}">
					<core:Item key="{Plant}" text="{Plant} - {PlantName}"/>
				</ComboBox>
				<!--<Label text="{i18n>workcenter}" required="true"/>-->
				<!--<ComboBox width="100%" valueState="None" placeholder="Select Work Center" selectedKey="{/PMCreateRequest/Header/PmWkctr/}"-->
				<!--	items="{/PMCreateRequest/WorkCenterF4/}">-->
				<!--	<core:Item key="{Workcenter}" text="{Workcenter} - {WorkcenterDesc}"/>-->
				<!--</ComboBox>-->
				<Label text="{i18n>Description}" required="false"/>
				<Input placeholder="Enter Description" value="{/ServiceDescription/}" enabled="false"/>
				<Label text="{i18n>shortdescription}" required="true"/>
				<Input placeholder="Allowed 40 Charcters" showSuggestion="" showValueHelp="" value="{/PMCreateRequest/Header/Descript/}" valueHelpRequest=""/>
				<Label text="{i18n>CompanyCode}" required="true"/>
				<ComboBox width="100%" change="onCheckPlantVal" selectionChange="onSelectCompany" valueState="None" placeholder="Select Company"
					selectedKey="{/AccountPayable/ManagePettyCash/Header/CompanyCode/}" items="{/CompanyF4/}">
					<core:Item key="{CompanyCode}" text="{CompanyCode} - {CompanyCodeName}"/>
				</ComboBox>
				<Label text="{i18n>FiscalYear}" required="true"/>
				<DatePicker displayFormat="yyyy" valueFormat="yyyy" value="{/ManagePettyCashData/FiscalYear}" change="handleManagePettyCashDateChange"
					class="sapUiSmallMarginBottom"/>
				<Label text="{i18n>CashJournalNUmber}" required="true"/>
				<ComboBox width="100%" valueState="None" placeholder="Select Cash Journal"
					selectedKey="{/AccountPayable/ManagePettyCash/Header/CashJournalKey}" items="{/CashJournalF4/}">
					<core:Item key="{CashJournalDocumentInternalID}" text="{CashJournalDocumentInternalID}"/>
				</ComboBox>
			</fm:content>
			<Button text="Search" type="Default" press="onSearchFinanceRequest" width="65%"
				class="sapUiTinyMarginBegin sapUiContentPadding swcc-pmy-btn"/>
		</fm:SimpleForm>
	</VBox>
	<VBox width="100%">
		<fm:SimpleForm id="ssp-changerequest1" title="" layout="ResponsiveGridLayout" class="ssp-form-txtarea" columnsM="2" columnsL="3"
			columnsXL="4" singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Label text="{i18n>Remarks}" required="false"/>
				<TextArea placeholder="" rows="5" cols="20" text="{/PMCreateRequest/Header/NotifText/}" growing="true" growingMaxLines="7" height="6rem"
					width="100%"/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox class="ssp-table-box">
		<!--<fm:SimpleForm id="ssp-create-sr-2" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="3"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>-->
		<Toolbar>
			<Title level="H3" text="{i18n>Details}" class="ssp-tlbr-title"/>
			<ToolbarSpacer/>
			<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
		</Toolbar>
		<Table sticky="ColumnHeaders,HeaderToolbar" inset="false" mode="MultiSelect" items="{path : '/ManagePettyCashData/itemData'}"
			class="ssp-request-Table sapUiContentPadding">
			<columns>
				<Column width="20em">
					<Text text="Cash Journal Number"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Posting Date"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Amount"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Currency"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
					<cells>
						<Text text="{PostingNo}"/>
						<Text text="{path:'PostingDate', type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'dd MMMM, yyyy' } }"/>
						<Text text="{NetAmount}"/>
						<Text text="{Currency}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<!--	</fm:content>
		</fm:SimpleForm>-->
	</VBox>
</core:FragmentDefinition>