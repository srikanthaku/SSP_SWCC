<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:fm="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox width="100%">
		<fm:SimpleForm title="{i18n>createservicerequest}" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="2" columnsXL="4"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:toolbar>
				<Toolbar id="TB1s" class="ssp-title">
					<Button press=".handleBackPress" icon="sap-icon://nav-back"/>
					<Title class="ssp-form-bg" id="Title2" text="{i18n>RecordandProcessofInvoice}"/>
					<ToolbarSpacer/>
				</Toolbar>
			</fm:toolbar>
			<fm:content>
				<!--<Toolbar>-->
				<!--	<Title level="H3" text="{i18n>RecordandProcessofInvoice}" class="ssp-tlbr-title"/>-->
				<!--	<ToolbarSpacer/>-->
				<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
				<!--</Toolbar>-->
				<Label text="{i18n>CompanyCode}" required="true"/>
				<Input value="{/CompanyF4/0/CompanyCode}" placeholder=""/>
				<Label text="{i18n>FiscalYear}" required="true"/>
				<DatePicker displayFormat="yyyy" valueFormat="yyyy" value="{/RecordandProcessInvoice/FiscalYear}" change="handleChange"
					class="sapUiSmallMarginBottom"/>
			</fm:content>
			<Button text="Search" type="Default" press="onSearchRcrd" width="65%" class="sapUiTinyMarginBegin sapUiContentPadding swcc-pmy-btn"/>
		</fm:SimpleForm>
	</VBox>
	<VBox class="ssp-table-box">
		<!--<fm:SimpleForm id="ssp-create-sr-2" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="3"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>-->
		<Toolbar>
			<Title level="H3" text="{i18n>Details}" class="ssp-tlbr-title"/>
			<ToolbarSpacer/>
			<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
		</Toolbar>
		<Table noDataText="No Data Found" growing="true" growingScrollToLoad="false" growingThreshold="10" sticky="ColumnHeaders,HeaderToolbar"
			items="{path : '/RecordandProcessInvoice/itemData'}" inset="false" class="ssp-request-Table sapUiContentPadding">
			<columns>
				<Column width="20em">
					<Text text="Invoice Number"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Posting Date"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Reference"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
					<Text text="PO Number"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
					<Text text="Item Number"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
					<Text text="Amount"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Currency"/>
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Vendor"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
					<cells>
						<Text text="{InvoiceNo}"/>
						<Text text="{PostingDate}"/>
						<Text text="{DocumentRef}"/>
						<Text text="{PoNo}"/>
						<Text text="{PoItem}"/>
						<Text text="{Amount}"/>
						<Text text="{currency}"/>
						<Text text="{VendorCode}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<!--	</fm:content>
		</fm:SimpleForm>-->
	</VBox>
</core:FragmentDefinition>