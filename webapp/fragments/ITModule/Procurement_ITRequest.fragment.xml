<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:fm="sap.ui.layout.form"
	xmlns:upload="sap.m.upload" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
	<VBox width="100%">
		<fm:SimpleForm title="{i18n>ITServiceRequest}" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="4"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:toolbar>
				<Toolbar class="ssp-title">
					<Button press="handleBackPress" icon="sap-icon://nav-back"/>
					<Title class="ssp-form-bg" text="{i18n>ITProcurementService}"/>
					<ToolbarSpacer/>
				</Toolbar>
			</fm:toolbar>
			<fm:content>
				<!--<Toolbar>-->
				<!--	<Title level="H3" text="{i18n>ITProcurementService}" class="ssp-tlbr-title"/>-->
				<!--	<ToolbarSpacer/>-->
				<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
				<!--</Toolbar>-->
				<Label text="{i18n>serviceproduct}" required="true"/>
				<Input value="{/ITAppVisible/}" showSuggestion="" enabled="false" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>Description}" required="false"/>
				<Input placeholder="Enter Description" value="{/ServiceDescription/}" enabled="false"/>
				<Label text="{i18n>Plant}" required="true"/>
				<Input ariaLabelledBy="-ZSSP_COMMON_SRV-/A_Plant" id="_com.swcc.Template.fragments.CommonF4.PlantF4_" width="100%" placeholder="Enter Plant"
					valueHelpOnly="true" showValueHelp="true" valueHelpRequest="onValueHelpRequest" value="{/ITProcurement/Header/Plant}">
					<customData>
						<core:CustomData key="Plant" value="Plant"/>
						<core:CustomData key="PlantName" value="Plant Name"/>
					</customData>
				</Input>
				<Label text="{i18n>TotalEstimatedValue}" required="true"/>
				<Input enabled="false" placeholder=""></Input>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox width="100%">
		<fm:SimpleForm id="ssp-changerequest1" title="" layout="ResponsiveGridLayout" class="ssp-form-txtarea" columnsM="2" columnsL="3"
			columnsXL="4" singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Label text="{i18n>IssueDescription}" required="true"/>
				<TextArea placeholder="" rows="5" cols="20" text="{/PMCreateRequest/Header/NotifText/}" growing="true" growingMaxLines="7" height="6rem"
					width="100%"/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox class="ssp-table-box">
		<!--<fm:SimpleForm id="ssp-create-sr-2" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="3"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>-->
		<Toolbar>
			<Title level="H3" text="{i18n>Details}" class="ssp-tlbr-title"/>
			<ToolbarSpacer/>
			<Button icon="sap-icon://add" press=".onAddItemsPress"/>
		</Toolbar>
		<ScrollContainer horizontal="true" vertical="false" height="auto">
			<Table mode="Multiselect" items="{path : '/ITProcurement/itemData/'}" sticky="ColumnHeaders,HeaderToolbar"
				class="ssp-request-Table sapUiContentPadding" inset="false" growingThreshold="5" growingScrollToLoad="true" growing="true"
				fixedLayout="true">
				<columns>
					<Column>
						<Text text="{i18n>material}"/>
					</Column>
					<Column>
						<Text text="{i18n>Description}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>quantity}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>uom}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>StockAvailability}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>unitprice}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>TotalPrice}"/>
					</Column>
					<Column width="5%"></Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<Input width="100%" placeholder="Enter Material" valueHelpOnly="true" showValueHelp="true" valueHelpRequest="onMatValueHelpRequest"
								value="{MATNR}"/>
							<Input placeholder="Enter Description" id="description" value="{Description}" enabled="false"/>
							<Input placeholder="QTY" showSuggestion="" value="{MENGE}" showValueHelp="" valueHelpRequest="" liveChange="handleLiveChange"/>
							<Input placeholder="Enter UOM" id="materialUom" value="{BaseUnit}" enabled="false"/>
							<Input placeholder="Req" showSuggestion="" value="{AFNAM}" showValueHelp="" valueHelpRequest=""/>
							<Input placeholder="Unit Price" showSuggestion="" value="{UNIT_PRICE}" showValueHelp="" valueHelpRequest="" liveChange="handleLiveChange"/>
							<Text text="{UNIT_PRICE}"/>
							<Button icon="sap-icon://delete" press="onDeleteItemPress" type="Transparent"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</ScrollContainer>
		<!--	</fm:content>
		</fm:SimpleForm>-->
	</VBox>
</core:FragmentDefinition>