<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:tnt="sap.tnt"
	xmlns:fm="sap.ui.layout.form" xmlns:upload="sap.m.upload" xmlns:core="sap.ui.core">
	<VBox width="100%">
		<fm:SimpleForm layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="2" columnsXL="4" singleContainerFullSize="true"
			labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:toolbar>
				<Toolbar class="ssp-title">
					<Button icon="sap-icon://nav-back" press="handleBackPress"/>
					<Title class="ssp-form-bg" text="{i18n>createservicerequest}"/>
					<ToolbarSpacer/>
				</Toolbar>
			</fm:toolbar>
			<fm:content>
				<Toolbar>
					<Title level="H3" text="{/ServiceDescription/}" class="ssp-tlbr-title"/>
					<ToolbarSpacer/>
					<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
				</Toolbar>
				<Label text="{i18n>serviceproduct}" required="true"/>
				<Input value="{/HRAppVisible/}" showSuggestion="" enabled="false"/>
				<Label text="{i18n>plant}" required="true"/>
				<Input ariaLabelledBy="-ZSSP_COMMON_SRV-/A_Plant-com.swcc.Template.fragments.CommonF4.PlantF4-/PlantF4/" width="100%"
					placeholder="Enter Plant" valueHelpOnly="false" showValueHelp="true" valueHelpRequest="onValueHelpRequest" value="{/PlantF4/}">
					<customData>
						<core:CustomData key="Plant" value="Plant"/>
						<core:CustomData key="PlantName" value="Plant Name"/>
					</customData>
				</Input>
				<Label text="{i18n>userid}" required="false"/>
				<Input enabled="false" value="{/LoginUserID}" valueHelpRequest=""/>
				<Label text="{i18n>FirstName}" required="true"/>
				<Input placeholder="Enter First Name" value="{/TimeManagement/ActivatingAccessCard/Header/Vorna/}"/>
				<Label text="{i18n>area}" required="true"/>
				<Input placeholder="Enter Area" value="{/TimeManagement/ActivatingAccessCard/Header/Zarea/}"/>
				<Label text="{i18n>device}" required="true"/>
				<Input placeholder="Enter Device" value="{/TimeManagement/ActivatingAccessCard/Header/Zdasetting/}"/>
				<Label text="{i18n>enddate}" required="true"/>
				<DatePicker placeholder="Enter End Date" valueFormat="dd/MM/yyyy" value="{/TimeManagement/ActivatingAccessCard/Header/Zendate/}"
					change="handleChange" class=""/>
				<Label text="{i18n>Description}" required="true"/>
				<Input placeholder="Enter Description" value="{/ServiceDescription/}" enabled="false"/>
				<Label text="{i18n>department}" required="true"/>
				<Input placeholder="Enter Department" value="{/TimeManagement/ActivatingAccessCard/Header/Orgeh/}"/>
				<Label text="{i18n>LastName}" required="true"/>
				<Input placeholder="Enter Last Name" value="{/TimeManagement/ActivatingAccessCard/Header/Nachn/}"/>
				<Label text="{i18n>identityno}" required="true"/>
				<Input placeholder="Enter Identity No" value="{/TimeManagement/ActivatingAccessCard/Header/Idcot/}"/>
				<Label text="{i18n>cardno}" required="true"/>
				<Input placeholder="Enter Card No" value="{/TimeManagement/ActivatingAccessCard/Header/Zcardno/}"/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox width="100%">
		<fm:SimpleForm title="" layout="ResponsiveGridLayout" class="ssp-form-txtarea" columnsM="2" columnsL="3" columnsXL="4"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Label text="{i18n>Remarks}" required="false"/>
				<TextArea placeholder="" rows="5" cols="20" value="{/TimeManagement/ActivatingAccessCard/Header/Zcomment/}" growing="true"
					growingMaxLines="7" height="6rem" width="100%"/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
</core:FragmentDefinition>