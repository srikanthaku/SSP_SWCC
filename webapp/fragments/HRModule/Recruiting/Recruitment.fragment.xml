<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:fm="sap.ui.layout.form"
	xmlns:upload="sap.m.upload" xmlns:core="sap.ui.core">
	<VBox width="100%">
		<fm:SimpleForm id="ssp-recuritement" title="{i18n>createservicerequest}" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="2"
			columnsXL="4" singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Toolbar>
					<Title level="H3" text="{i18n>Irecuritement}" class="ssp-tlbr-title"/>
					<ToolbarSpacer/>
					<!--<Button icon="sap-icon://settings" press=".handleButtonPress"/>-->
				</Toolbar>
				<Label text="{i18n>serviceproduct}" required="true"/>
				<ComboBox id="rec-serviceproduct" width="100%" valueState="None">
					<items>
						<core:Item key="Yes" text="Yes"/>
						<core:Item key="No" text="No"/>
					</items>
				</ComboBox>
				<Label text="{i18n>plant}" required="true"/>
				<Input id="rec-qty" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>jobtitle}" required="false"/>
				<Input id="rec-baseunit" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>jobgrade}" required="true"/>
				<ComboBox id="rec-priority" width="100%" valueState="None">
					<items>
						<core:Item key="Regular" text="Regular"/>
						<core:Item key="Emergency" text="Emergency"/>
						<core:Item key="Urgent" text="Urgent"/>
					</items>
				</ComboBox>
				<Label text="{i18n>jobnumber}" required="true"/>
				<ComboBox id="rec-wrkcenter" width="100%" valueState="None">
					<items>
						<core:Item key="Yes" text="Yes"/>
						<core:Item key="No" text="No"/>
					</items>
				</ComboBox>
				<Label text="{i18n>joblocation}" required="true"/>
				<ComboBox id="rec-plant" width="100%" valueState="None">
					<items>
						<core:Item key="Regular" text="Regular"/>
						<core:Item key="Emergency" text="Emergency"/>
						<core:Item key="Urgent" text="Urgent"/>
					</items>
				</ComboBox>
				<Label text="{i18n>doyouhave}" required="true"/>
				<Input id="rec-productInput6" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>Description}" required="true"/>
				<Input id="rec-desc" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>workcenter}" required="true"/>
				<Input id="rec-wk" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>jobdesc}" required="true"/>
				<Input id="rec-jobdesc" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>requirementsandconditions}" required="true"/>
				<Input id="rec-req" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>scope}" required="true"/>
				<Input id="rec-scope" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>department}" required="true"/>
				<Input id="rec-dep" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>tasksrequired}" required="true"/>
				<Input id="rec-task" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>yearsofexp}" required="true"/>
				<Input id="rec-yoe" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>thewebsite}" required="true"/>
				<Input id="rec-thewebsite" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>qualificationreq}" required="true"/>
				<Input id="rec-qr" placeholder="" showSuggestion="" showValueHelp="" valueHelpRequest=""/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox width="100%">
		<fm:SimpleForm id="ssp-rec-create" title="" layout="ResponsiveGridLayout" class="ssp-form-txtarea" columnsM="2" columnsL="3" columnsXL="4"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Label text="{i18n>comments}" required="false"/>
				<TextArea placeholder="" rows="5" cols="20" growing="true" growingMaxLines="7" height="6rem" width="100%"/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox class="uploadBox sapUiSmallMarginBeginEnd">
		<upload:UploadSet id="rec-UploadSet" busyIndicatorDelay="0" mode="None" fileSizeExceeded="onFileSizeExceed" busyIndicatorSize="Medium"
			noDataDescription="{i18n>uploadquotation}" sameFilenameAllowed="false" noDataIllustrationType="SimpleEmptyList" instantUpload="true"
			showIcons="true" terminationEnabled="true" maxFileNameLength="100" maxFileSize="5" afterItemRemoved="onFileDeleted"
			fileRenamed="onFileRenamed" fileTypes="pdf,doc,docx"
			mediaTypes="application/msword,application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document" multiple="true"
			afterItemAdded="onFileAdded">
			<upload:toolbar>
				<OverflowToolbar>
					<Label text="{i18n>Attachments}" class="lbl-attach" required="true"/>
					<core:Icon id="rec-idInfoIconLeave" src="sap-icon://message-information" size="1rem" height="3rem" tooltip="{i18n>uploadtooltip}"></core:Icon>
					<ToolbarSpacer/>
				</OverflowToolbar>
			</upload:toolbar>
		</upload:UploadSet>
	</VBox>
</core:FragmentDefinition>