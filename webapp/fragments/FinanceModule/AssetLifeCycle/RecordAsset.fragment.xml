<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns="sap.m" xmlns:tnt="sap.tnt"
	xmlns:fm="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<VBox width="100%">
		<fm:SimpleForm layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="3" columnsXL="4" singleContainerFullSize="true"
			labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:toolbar>
				<Toolbar class="ssp-title">
					<Button press=".handleBackPress" icon="sap-icon://nav-back"/>
					<Title class="ssp-form-bg" text="{i18n>createservicerequest}"/>
					<ToolbarSpacer/>
				</Toolbar>
			</fm:toolbar>
			<fm:content>
				<Toolbar>
					<Title level="H3" text="{/ServiceDescription/}" class="ssp-tlbr-title"/>
					<ToolbarSpacer/>
				</Toolbar>
				<Label text="{i18n>serviceproduct}"/>
				<Input value="{/FinanceAppVisible/}" showSuggestion="" enabled="false" showValueHelp="" valueHelpRequest=""/>
				<Label text="{i18n>quantity}" required="true"/>
				<Input placeholder="Enter Quantity" value="{/AssetLifecycle/RecordAsset/Header/quantity/}"/>
				<!--	<Label text="{i18n>workcenter}" required="true"/>
				<ComboBox width="100%" valueState="None" placeholder="Select Work Center" selectedKey="{/PMCreateRequest/Header/PmWkctr/}"
					items="{/PMCreateRequest/WorkCenterF4/}">
					<core:Item key="{Workcenter}" text="{Workcenter} - {WorkcenterDesc}"/>
				</ComboBox>-->
				<Label text="{i18n>shortdescription}" required="true"/>
				<Input placeholder="Allowed 40 Charcters" showSuggestion="" showValueHelp="" value="{/PMCreateRequest/Header/Descript/}" valueHelpRequest=""/>
				<Label text="{i18n>CompanyCode}" required="true"/>
				<ComboBox width="100%" change="onCheckPlantVal" selectionChange="onSelectCompany" valueState="None" placeholder="Select Company"
					selectedKey="{/AssetLifecycle/PerfomAsset/Header/CompanyCode/}" items="{/CompanyF4/}">
					<core:Item key="{CompanyCode}" text="{CompanyCode} - {CompanyCodeName}"/>
				</ComboBox>
				<Label text="{i18n>AssetClass}" required="true"/>
				<ComboBox width="100%" change="onCheckPlantVal" selectionChange="onSelectPlant" valueState="None" placeholder="{i18n>AssetClass}"
					selectedKey="{/AssetLifecycle/PerfomAsset/AssetClass}" items="{fiModel>/AssetClass}">
					<core:Item key="{fiModel>AssetClass}" text="{fiModel>AssetClass} - {fiModel>AssetClass_Text}"/>
				</ComboBox>
				<Label text="{i18n>SubNumber}" required="true"/>
				<ComboBox width="100%" change="onCheckPlantVal" selectionChange="onSelectPlant" valueState="None" placeholder="{i18n>AssetClass}"
					selectedKey="{/AssetLifecycle/RecordAsset/Header/AssetClass}" items="{/AssestSubf4/}">
					<core:Item key="{AssetClass}" text="{AssetClass} - {AssetClass_Text}"/>
				</ComboBox>
				<Label text="{i18n>Description}" required="true"/>
				<Input required="true" width="100%"/>
				<Label text="{i18n>Description}" required="false"/>
				<Input placeholder="Enter Description" value="{/ServiceDescription/}" enabled="false"/>
				<Label text="{i18n>AssetMainNoText}" required="true"/>
				<Input required="true" width="100%"/>
				<Label text="{i18n>InventoryNumber}" required="true"/>
				<Input required="true" width="100%"/>
				<Label text="{i18n>InventoryNote}" required="true"/>
				<Input required="true" width="100%"/>
				<Label text="{i18n>CaptitalizedOn}" required="true"/>
				<Input required="true" width="100%"/>
				<Label text="{i18n>CostCenter}" required="true"/>
				<ComboBox width="100%" change="" selectionChange="" valueState="None" placeholder="{i18n>CostCenter}"
					selectedKey="{/AssetLifecycle/RecordAsset/Header/ControllingArea}" items="{/CostCenterf4/}">
					<core:Item key="{ControllingArea}" text="{ControllingArea} - {CostCenter}"/>
				</ComboBox>
				<Label text="{i18n>ProfitCenter}" required="true"/>
				<ComboBox width="100%" change="" selectionChange="" valueState="None" placeholder="{i18n>CostCenter}" selectedKey="{fiModel>CostCenter}"
					items="{fiModel>/CostCenter}">
					<core:Item key="{fiModel>CostCenter}" text="{fiModel>CostCenter} - {fiModel>ProfitCenter}"/>
				</ComboBox>
				<Label text="{i18n>plant}" required="true"/>
				<ComboBox width="100%" change="onCheckPlantVal" selectionChange="onSelectPlant" valueState="None" placeholder="Select Plant"
					selectedKey="{/AssetLifecycle/RecordAsset/Header/Plant/}" items="{/PlantF4/}">
					<core:Item key="{Plant}" text="{Plant} - {PlantName}"/>
				</ComboBox>
				<Label text="{i18n>Area}" required="true"/>
				<ComboBox width="100%" change="onCheckPlantVal" selectionChange="onSelectPlant" valueState="None" placeholder="Select Area"
					selectedKey="{/AssetLifecycle/RecordAsset/Header/Group1AssetEvaluationKey/}" items="{/Areaf4/}">
					<core:Item key="{Group1AssetEvaluationKey}" text="{Group1AssetEvaluationKey} - {Group1AssetEvaluationKey_Text}"/>
				</ComboBox>
				<Label text="{i18n>Unit}" required="true"/>
				<ComboBox width="100%" change="onCheckPlantVal" selectionChange="onSelectPlant" valueState="None" placeholder="Select Unit"
					selectedKey="{/AssetLifecycle/RecordAsset/Header/Group2AssetEvaluationKey/}" items="{/Unitf4/}">
					<core:Item key="{Group2AssetEvaluationKey}" text="{Group2AssetEvaluationKey} - {Group2AssetEvaluationKey_Text}"/>
				</ComboBox>
				<Label text="{i18n>System}" required="true"/>
				<ComboBox width="100%" change="onCheckPlantVal" selectionChange="onSelectPlant" valueState="None" placeholder="{i18n>System}"
					selectedKey="{/AssetLifecycle/RecordAsset/Header/Group3AssetEvaluationKey}" items="{/Systemf4/}">
					<core:Item key="{Group3AssetEvaluationKey}" text="{Group3AssetEvaluationKey} - {Group3AssetEvaluationKey_Text}"/>
				</ComboBox>
				<Label text="{i18n>AssetSuperNumber}" required="true"/>
				<ComboBox width="100%" change="onCheckPlantVal" selectionChange="onSelectPlant" valueState="None" placeholder="{i18n>AssetSuperNumber}"
					selectedKey="{/AssetLifecycle/RecordAsset/Header/AssetSuperNum}" items="{/AssestSuperf4/}">
					<core:Item key="{AssetSuperNum}" text="{AssetSuperNum} - {AssetSuperText}"/>
				</ComboBox>
				<Label text="{i18n>NonTechnicalAsset}" required="true"/>
				<ComboBox width="100%" change="onCheckPlantVal" selectionChange="onSelectPlant" valueState="None" placeholder="{i18n>NonTechnicalAsset}"
					selectedKey="{/AssetLifecycle/RecordAsset/Header/AssetNonTech}" items="{/NonTechnicalf4/}">
					<core:Item key="{AssetNonTech}" text="{AssetNonTech} - {AssetNonTechText}"/>
				</ComboBox>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox width="100%">
		<fm:SimpleForm title="" layout="ResponsiveGridLayout" class="ssp-form-txtarea" columnsM="2" columnsL="3" columnsXL="4"
			singleContainerFullSize="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Label text="{i18n>Remarks}" required="false"/>
				<TextArea placeholder="" rows="5" cols="20" text="{/PMCreateRequest/Header/NotifText/}" growing="true" growingMaxLines="7" height="6rem"
					width="100%"/>
			</fm:content>
		</fm:SimpleForm>
	</VBox>
	<VBox class="uploadBox sapUiSmallMarginBeginEnd">
		<Label text="{i18n>Attachments}" required="false"/>
		<u:FileUploader class="sapUiContentPadding" buttonOnly="true" multiple="true" icon="sap-icon://attachment" visible="true"
			sameFilenameAllowed="false" buttonText="Upload file" change="onFileAdded" filenameLengthExceed="onFileNameLengthExceed"
			fileSizeExceed="onFileSizeExceed" maximumFileSize="2" uploadComplete="onFileComplete1" typeMissmatch="handleMissmatch"
			placeholder="Choose a file" style="Emphasized"
			mimeType="application/msword,application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document"/>
	</VBox>
	<VBox>
		<Table items="{/PMCreateRequest/UploadedData}" class="upload-table" mode="Delete" noDataText="{i18n>uploadtooltip}">
			<headerToolbar >
				<Toolbar>
					<content>
						<Image src="../webapp/util/Images/uploadfile.png" height="auto" class="hide-data" width="auto">
							<layoutData>
								<FlexItemData growFactor="1"/>
							</layoutData>
						</Image>
					</content>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="File Name"/>
				</Column>
				<Column>
					<Text text="File Size"/>
				</Column>
				<Column>
					<Text text="Delete"/>
				</Column>
				<!-- Add more columns as needed -->
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{Filename}"/>
						<Text text="{Filesize}"/>
						<Text textAlign="Center" text="{Delete}"/>
						<!-- Add more cells as needed -->
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</VBox>
</core:FragmentDefinition>