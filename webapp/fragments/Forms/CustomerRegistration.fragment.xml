<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:fm="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<HBox width="100%">
		<fm:SimpleForm title="{i18n>customerreg}" layout="ColumnLayout" class="ssp-form-bg" columnsM="2" columnsL="2" columnsXL="2"
			singleContainerFullSize="false" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12">
			<fm:content>
				<Toolbar>
					<Title level="H3" text="{i18n>customerinformation}" class="ssp-tlbr-title"/>
					<ToolbarSpacer/>
				</Toolbar>
				<Label text="{i18n>customername}" required="true"/>
				<Input value="{/CustomerRegistrationData/Header/Company/}" type="text" placeholder="Enter Customer Name" ariaLabelledBy="Inputcustomername"/>
				<Label text="{i18n>street}" required="true"/>
				<Input value="{/CustomerRegistrationData/Header/Stras/}" type="text" placeholder="Enter Street" ariaLabelledBy="Inputcustomerstreet"/>
				<Label text="{i18n>postalcode}" required="true"/>
				<Input value="{/CustomerRegistrationData/Header/Pstlz/}" type="Number" placeholder="Enter Postal Code"
					ariaLabelledBy="Inputcustomerpostalcode"/>
				<Label text="{i18n>country}" required="true"/>
				<ComboBox width="100%" valueState="None" selectionChange="onCountryChange" placeholder="Select Country"
					selectedKey="{/CustomerRegistrationData/Header/Land1/}" items="{/CustomerRegistrationData/CountryF4/}">
					<core:Item key="{Country}" text="{CountryName}"/>
				</ComboBox>
				<Label text="{i18n>Region}" required="false"/>
				<ComboBox width="100%" valueState="None" placeholder="Select Region" selectedKey="{/CustomerRegistrationData/Header/Regio/}"
					items="{/CustomerRegistrationData/RegionF4/}">
					<core:Item key="{Country}" text="{RegionName}"/>
				</ComboBox>
				<Label text="{i18n>shortname}" required="false"/>
				<Input value="{/CustomerRegistrationData/Header/SearchTerm/}" placeholder="Enter Short Name" ariaLabelledBy="Inputshortname"/>
				<Label text="{i18n>POBOX}" required="true"/>
				<Input value="{/CustomerRegistrationData/Header/PoBox/}" placeholder="Enter PO BOX" ariaLabelledBy="Inputponumber"/>
				<Label text="{i18n>City}" required="true"/>
				<Input value="{/CustomerRegistrationData/Header/Ort01/}" placeholder="Enter PO BOX" ariaLabelledBy="Inputponumber"/>
				<Label text="{i18n>Email}" required="true" labelFor="inputEmail"/>
				<Input id="inputEmail" value="{/CustomerRegistrationData/Header/Email/}" type="Email" placeholder="Enter Email"
					ariaLabelledBy="InputEmailLabel"/>
				<Label text="{i18n>crno}" required="true"/>
				<Input id="idcrno" value="{/CustomerRegistrationData/Header/Cr_No/}" enabled="true" type="Text" placeholder="Enter Customer Registration No"
					ariaLabelledBy="Inputcrno"/>
			</fm:content>
		</fm:SimpleForm>
	</HBox>
</core:FragmentDefinition>